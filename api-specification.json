{
  "openapi": "3.0.3",
  "info": {
    "title": "PandQ API Specification",
    "version": "1.0.0",
    "description": "API specification for PandQ Backend - Built with Spring Boot 3.5.7 and Java 21, implementing Hexagonal Architecture (Ports & Adapters Pattern)",
    "contact": {
      "name": "Phan Hong Phuc",
      "email": "22120208@student.hcmus.edu.vn"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local development server"
    },
    {
      "url": "https://api.pandq.com",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "Authentication and authorization endpoints"
    },
    {
      "name": "Users",
      "description": "User management endpoints"
    }
  ],
  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User login",
        "description": "Authenticate user with email and password. Returns JWT access token upon successful authentication.",
        "operationId": "login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequestDto"
              },
              "examples": {
                "validLogin": {
                  "summary": "Valid login request",
                  "value": {
                    "email": "22120280@student.hcmus.edu.vn",
                    "password": "Password123!"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginSuccessResponse"
                },
                "examples": {
                  "success": {
                    "summary": "Successful login response",
                    "value": {
                      "data": {
                        "accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIyMjEyMDIwMUBzdHVkZW50LmhjbXVzLmVkdS52biIsInJvbGUiOiJTVFVERU5UIiwiaWF0IjoxNjk5NDY0MDAwLCJleHAiOjE2OTk1NTA0MDB9.xxx",
                        "expiresAt": "2025-11-09T11:30:00.000"
                      },
                      "meta": {
                        "timestamp": "2025-11-09T10:30:00.000"
                      },
                      "code": "OK",
                      "message": "Login successful"
                    }
                  }
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "description": "HttpOnly cookie containing refresh token",
                "schema": {
                  "type": "string",
                  "example": "refresh_token=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...; Path=/api/auth/refresh; HttpOnly; Secure; SameSite=None"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Validation failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "invalidEmail": {
                    "summary": "Invalid email format",
                    "value": {
                      "message": "Invalid input(s)",
                      "code": "VALIDATION_FAILED",
                      "details": [
                        {
                          "field": "email",
                          "message": "Email must end with @student.hcmus.edu.vn"
                        }
                      ]
                    }
                  },
                  "invalidPassword": {
                    "summary": "Invalid password format",
                    "value": {
                      "message": "Invalid input(s)",
                      "code": "VALIDATION_FAILED",
                      "details": [
                        {
                          "field": "password",
                          "message": "Password must be at least 8 characters and include 1 uppercase letter, 1 number, and 1 special character"
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "invalidCredentials": {
                    "summary": "Invalid email or password",
                    "value": {
                      "message": "Invalid email or password",
                      "code": "UNAUTHORIZED"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "serverError": {
                    "summary": "Internal server error",
                    "value": {
                      "message": "An unexpected error occurred",
                      "code": "INTERNAL_SERVER_ERROR"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/refresh": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Refresh access token",
        "description": "Generate a new access token using the refresh token stored in HttpOnly cookie",
        "operationId": "refresh",
        "parameters": [
          {
            "name": "refresh_token",
            "in": "cookie",
            "description": "Refresh token stored in HttpOnly cookie",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Token refreshed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RefreshSuccessResponse"
                },
                "examples": {
                  "success": {
                    "summary": "Successful token refresh",
                    "value": {
                      "data": {
                        "accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIyMjEyMDIwMUBzdHVkZW50LmhjbXVzLmVkdS52biIsInJvbGUiOiJTVFVERU5UIiwiaWF0IjoxNjk5NDY0MDAwLCJleHAiOjE2OTk1NTA0MDB9.xxx",
                        "expiresAt": "2025-11-09T11:30:00.000"
                      },
                      "meta": {
                        "timestamp": "2025-11-09T10:30:00.000"
                      },
                      "code": "OK",
                      "message": "Token refreshed"
                    }
                  }
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "description": "HttpOnly cookie containing new refresh token",
                "schema": {
                  "type": "string",
                  "example": "refresh_token=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...; Path=/api/auth/refresh; HttpOnly; Secure; SameSite=None"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or expired refresh token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "invalidToken": {
                    "summary": "Invalid refresh token",
                    "value": {
                      "message": "Invalid or expired refresh token",
                      "code": "UNAUTHORIZED"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "serverError": {
                    "summary": "Internal server error",
                    "value": {
                      "message": "An unexpected error occurred",
                      "code": "INTERNAL_SERVER_ERROR"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User logout",
        "description": "Logout user and invalidate refresh token",
        "operationId": "logout",
        "parameters": [
          {
            "name": "refresh_token",
            "in": "cookie",
            "description": "Refresh token stored in HttpOnly cookie",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Logout successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageResponse"
                },
                "examples": {
                  "success": {
                    "summary": "Successful logout",
                    "value": {
                      "meta": {
                        "timestamp": "2025-11-09T10:30:00.000"
                      },
                      "code": "OK",
                      "message": "Logout successful"
                    }
                  }
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "description": "HttpOnly cookie with expired refresh token to clear it",
                "schema": {
                  "type": "string",
                  "example": "refresh_token=; Path=/api/auth/refresh; HttpOnly; Secure; SameSite=None; Max-Age=0"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "serverError": {
                    "summary": "Internal server error",
                    "value": {
                      "message": "An unexpected error occurred",
                      "code": "INTERNAL_SERVER_ERROR"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginRequestDto": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "pattern": "^[a-zA-Z0-9._%+-]+@student\\.hcmus\\.edu\\.vn$",
            "description": "User email address. Must be a valid HCMUS student email ending with @student.hcmus.edu.vn",
            "example": "22120280@student.hcmus.edu.vn"
          },
          "password": {
            "type": "string",
            "format": "password",
            "pattern": "^(?=.*[A-Z])(?=.*\\d)(?=.*[^A-Za-z\\d]).{8,}$",
            "description": "User password. Must be at least 8 characters and include 1 uppercase letter, 1 number, and 1 special character",
            "example": "Password123!",
            "minLength": 8
          }
        },
        "description": "Login request payload containing user credentials"
      },
      "LoginResponseDto": {
        "type": "object",
        "required": ["accessToken", "expiresAt"],
        "properties": {
          "accessToken": {
            "type": "string",
            "description": "JWT access token for authenticated requests",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIyMjEyMDIwMUBzdHVkZW50LmhjbXVzLmVkdS52biIsInJvbGUiOiJTVFVERU5UIiwiaWF0IjoxNjk5NDY0MDAwLCJleHAiOjE2OTk1NTA0MDB9.signature"
          },
          "expiresAt": {
            "type": "string",
            "format": "date-time",
            "description": "Access token expiration timestamp",
            "example": "2025-11-09T11:30:00.000"
          }
        },
        "description": "Login response containing JWT access token and expiration time"
      },
      "LoginSuccessResponse": {
        "type": "object",
        "required": ["data", "meta", "code", "message"],
        "properties": {
          "data": {
            "$ref": "#/components/schemas/LoginResponseDto"
          },
          "meta": {
            "$ref": "#/components/schemas/Meta"
          },
          "code": {
            "type": "string",
            "description": "Response code",
            "example": "OK"
          },
          "message": {
            "type": "string",
            "description": "Response message",
            "example": "Login successful"
          }
        },
        "description": "Wrapper object for successful login response"
      },
      "RefreshTokenResponseDto": {
        "type": "object",
        "required": ["accessToken", "expiresAt"],
        "properties": {
          "accessToken": {
            "type": "string",
            "description": "New JWT access token",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIyMjEyMDIwMUBzdHVkZW50LmhjbXVzLmVkdS52biIsInJvbGUiOiJTVFVERU5UIiwiaWF0IjoxNjk5NDY0MDAwLCJleHAiOjE2OTk1NTA0MDB9.signature"
          },
          "expiresAt": {
            "type": "string",
            "format": "date-time",
            "description": "New access token expiration timestamp",
            "example": "2025-11-09T11:30:00.000"
          }
        },
        "description": "Refresh token response containing new JWT access token"
      },
      "RefreshSuccessResponse": {
        "type": "object",
        "required": ["data", "meta", "code", "message"],
        "properties": {
          "data": {
            "$ref": "#/components/schemas/RefreshTokenResponseDto"
          },
          "meta": {
            "$ref": "#/components/schemas/Meta"
          },
          "code": {
            "type": "string",
            "description": "Response code",
            "example": "OK"
          },
          "message": {
            "type": "string",
            "description": "Response message",
            "example": "Token refreshed"
          }
        },
        "description": "Wrapper object for successful refresh response"
      },
      "MessageResponse": {
        "type": "object",
        "required": ["meta", "code", "message"],
        "properties": {
          "meta": {
            "$ref": "#/components/schemas/Meta"
          },
          "code": {
            "type": "string",
            "description": "Response code",
            "example": "OK"
          },
          "message": {
            "type": "string",
            "description": "Response message",
            "example": "Logout successful"
          }
        },
        "description": "Simple message response without data"
      },
      "Meta": {
        "type": "object",
        "required": ["timestamp"],
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of the response",
            "example": "2025-11-09T10:30:00.000Z"
          }
        },
        "description": "Metadata containing response timestamp"
      },
      "ErrorResponse": {
        "type": "object",
        "required": ["message", "code"],
        "properties": {
          "message": {
            "type": "string",
            "description": "Human-readable error message",
            "example": "Invalid email or password"
          },
          "code": {
            "type": "string",
            "enum": [
              "VALIDATION_FAILED",
              "INTERNAL_SERVER_ERROR",
              "JWT_TOKEN_INVALID",
              "STATUS_NOT_FOUND",
              "ROLE_NOT_FOUND",
              "DUPLICATE_BOOKMARK",
              "INVALID_FORMAT",
              "INVALID_BUSINESS_RULE",
              "NOT_FOUND",
              "BAD_REQUEST",
              "UNAUTHORIZED",
              "CONFLICT",
              "OPERATION_FAILED",
              "INTERNAL_ERROR",
              "DATABASE_ERROR"
            ],
            "description": "Error code identifying the type of error",
            "example": "UNAUTHORIZED"
          },
          "details": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FieldErrorDetail"
            },
            "description": "Array of field-specific validation errors (only present for validation failures)"
          }
        },
        "description": "Error response object"
      },
      "FieldErrorDetail": {
        "type": "object",
        "required": ["field", "message"],
        "properties": {
          "field": {
            "type": "string",
            "description": "Name of the field that failed validation",
            "example": "email"
          },
          "message": {
            "type": "string",
            "description": "Validation error message for the field",
            "example": "Email must end with @student.hcmus.edu.vn"
          }
        },
        "description": "Field-level validation error details"
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token obtained from login endpoint. Include in Authorization header as: Bearer {token}"
      }
    }
  },
  "security": []
}

